{
  "manifest_version": 3,
  "name": "YouTube Transcript AI Assistant",
  "version": "1.0.0",
  "description": "YouTubeの動画文字起こしを取得してAIアシスタント（ChatGPT、Claude、Gemini）に簡単に送信",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Transcript AI Assistant"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*", "https://youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles.css"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}